@{
    ViewData["Title"] = "AFL Ladder";
}
@model afl_dakboard.Controllers.IndexViewModel

<table>
    <thead>
    <th></th>
    <th colspan="2">Team</th>
    <th>P</th>
    <th>W</th>
    <th>L</th>
    <th>D</th>
    <th>%</th>
    <th>Pts</th>
    </thead>
    @{
        var count = 0;
    }
    @foreach (var standing in Model.Standings.Take(8))
    {
        count = count + 1;
        var team = Model.Teams.First(x => x.name == standing.name);
        <tr>
            <td>@count</td>
            <td><img src="https://squiggle.com.au/@team.logo" height="16" width="16"/></td>
            <td>@team.name</td>
            <td>@standing.played</td>
            <td>@standing.wins</td>
            <td>@standing.losses</td>
            <td>@standing.draws</td>
            <td>@standing.percentage.ToString("N")</td>
            <td>@standing.pts</td>
        </tr>
    }
</table>
